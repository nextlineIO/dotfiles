############
# General  #
############
general {
    hide_cursor = true
    grace = 0                  # no delay; lock is immediate
    no_fade_in = false
    disable_loading_bar = false
}

################
# Background   #
################
# Use a live screenshot + blur for tasteful privacy without pure black boredom.
background {
    monitor =                # empty = all monitors
    # Use the live screen as the source, blur it
    path = screenshot
    blur_passes = 3
    blur_size = 8
    brightness = 0.85        # slightly dimmer than normal
}

##############
# Clock      #
##############
label {
    monitor =
    text = cmd[update:1000] date "+%I:%M %p"
    color = rgba(234,234,238,1.0)
    font_size = 64
    shadow_passes = 1
    shadow_size = 4
    position = 0, -170
    halign = center
    valign = center
}

##############
# Date       #
##############
label {
    monitor =
    text = cmd[update:60000] date "+%A, %B %d"
    color = rgba(210,210,218,0.9)
    font_size = 20
    position = 0, -110
    halign = center
    valign = center
}

####################
# Password field   #
####################
input-field {
    monitor =
    size = 320, 52
    rounding = 10
    outline_thickness = 2

    # Colors (matches the scheme we’ve been using)
    inner_color = rgba(30,30,46,0.70)
    outer_color = rgba(91,91,214,0.85)
    font_color  = rgba(234,234,238,1.0)
    fade_on_empty = false

    # Feedback colors
    check_color = rgba(120,220,120,1.0)
    fail_color  = rgba(240,90,90,1.0)

    placeholder_text = <i>Enter password…</i>

    # Dots look cleaner than plaintext
    dots_size = 0.22
    dots_spacing = 0.30
    dots_center = true

    # Center it
    position = 0, -30
    halign = center
    valign = center
}

